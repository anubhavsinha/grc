{{#population_sample}}
  <div class="row-fluid inline-edit-population-doc" data-model="true" {{data 'model'}}>
    <div class="span4">
      <h5>
        Population Worksheet
        {{^if_null population_document_id}}
          <i class="grcicon-ok"></i>
        {{/if_null}}
      </h5>
    </div>
    <div class="span5 inline-editing custom-edit" data-doc-type="population">
      {{#if_null population_document_id}}
        <input class="input-block-level input-title" name="title" placeholder="Search for Doc Title or URL" type="text" {{ (el) -> el.pbc_autocomplete_documents() }}>
      {{else}}
        <a class="btn btn-mini pull-right remove-population-doc" href="javascript://" rel="tooltip" title="Remove population worksheet">
          <i class="grcicon-x-grey"></i>
        </a>
        <a class="btn btn-mini pull-right" href="/documents/{{population_document.id}}/edit?no_delete=true" data-toggle="modal-ajax-form" data-modal-class="modal-wide" rel="tooltip" title="Edit population worksheet">
          <i class="grcicon-edit"></i>
        </a>
        <p class="oneline">
          {{#if_null population_document.link_url}}
            <span>{{population_document.title}}</span>
          {{else}}
            <a href="{{population_document.link_url}}" target="_blank">{{firstnonempty population_document.title population_document.link_url}}</a>
          {{/if_null}}
        </p>
      {{/if_null}}
    </div>
    <div class="span2">
      <h5 class="right">Population #</h5>
    </div>

    <div class="span1 auto-save">
      <input type="text" name="population" class="input-block-level" value="{{population}}" />
      <span class="success fade">Saved</span>
    </div>
  </div>

  <div class="row-fluid inline-edit-population-doc" data-model="true" {{data 'model'}}>
    <div class="span4">
      <h5>
        Sample Worksheet
