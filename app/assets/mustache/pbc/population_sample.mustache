      {{else}}
        <a class="btn btn-mini pull-right remove-population-doc" href="javascript://" rel="tooltip" title="Remove sample worksheet">
          <i class="grcicon-x-grey"></i>
        </a>
        <a class="btn btn-mini pull-right" href="/documents/{{sample_worksheet_document.id}}/edit?no_delete=true" data-toggle="modal-ajax-form" data-modal-class="modal-wide" rel="tooltip" title="Edit sample worksheet">
          <i class="grcicon-edit"></i>
        </a>
        <p class="oneline">
          {{#if_null sample_worksheet_document.link_url}}
            <span>{{sample_worksheet_document.title}}</span>
          {{else}}
            <a href="{{sample_worksheet_document.link_url}}" target="_blank">{{firstnonempty sample_worksheet_document.title sample_worksheet_document.link_url}}</a>
          {{/if_null}}
        </p>
      {{/if_null}}
    </div>
    <div class="span2">
      <h5 class="right">Sample #</h5>
    </div>

    <div class="span1 auto-save">
      <input type="text" name="samples" class="input-block-level" value="{{samples}}"/>
      <span class="success fade">Saved</span>
    </div>
  </div>

  <div class="row-fluid inline-edit-population-doc" data-model="true" {{data 'model'}}>
    <div class="span4">
      <h5>
        Sample Evidence
        {{^if_null sample_evidence_document_id}}
