{{!section class="widget... }}
  <header class="header">
    <div class="row-fluid">
      <div class="span8">
        <h2>
          <i class="grcicon-{{object_type}}"></i>
          {{object_display}}
          {{#if is_related}}
            related to {{parent_type}}
          {{/if}}
          <span class="object_count">
            {{#if is_related}}
              {{related_count}}
            {{else}}
              {{list.length}}
            {{/if}}
          </span>
        </h2>
      </div>
      <div class="span4">
        <div class="widget-action pull-right remove-widget" rel="tooltip" title="Remove">
          <a class="remove" href="javascript://">
            <i class="grcicon-x-white"></i>
          </a>
        </div>
        <div class="widget-action pull-right widget-showhide" rel="tooltip" title="Expand / Collapse">
          <a class="active" href="javascript://"></a>
        </div>
        <div class="widget-action pull-right widget-action-help">
          <a data-placement="top" data-toggle="modal-ajax" href="/help/{{object_type}}_list" rel="tooltip" data-original-title="Help">
            <i class="grcicon-help"></i>
          </a>
        </div>
      </div>
    </div>
  </header>
  <div class="filter">
    <input class="ui-corner-all widgetsearch clear-value" placeholder="Search" type="text">
  </div>
  <section class="content">
    {{{render list_view}}}
  </section>
              
{{!/section}}
