#createnewthreat.modal.hide.fade
  .modal-header
    %nav
      %a.widgetbtn{"data-toggle" => "modal", :href => "#comingsoonModal"}
        %i.gcmsicon-questionmark-grey
      %a.widgetbtn{"data-dismiss" => "modal", :href => "#"}
        %i.gcmsicon-x-grey
    %h1 New/Edit Risky Attribute
  .modal-body
    .row-fluid
      .span2.form-inline.control-group
        %label{:for => "control-program"} Code
        %br/
        %input#control-program.span12.forminputsuccess{:placeholder => "BUILD-43", :type => "text"}/
        %br/
        %span.help-inline
      .span2.form-inline.control-group
        %label{:for => "control-code"} Name
        %br/
        %input#control-code.span12.forminputsuccess{:placeholder => "", :type => "text", :value => "Building"}/
        %br/
        %span.help-inline
      .span2.form-inline.control-group
        %label{:for => "control-version"} Version
        %br/
        %input#control-version.span12.forminputsuccess{:placeholder => "4.3", :type => "text"}/
        %br/
        %span.help-inline
      .span2
      .span2.form-inline.control-group
        %label{:for => "select01"} Type
        %br/
        .controls.span12
          %select#select01.span12
            %option List Table
            %option 2
            %option 3
            %option 4
            %option 5
        %br/
        %span.help-inline
      .span2.form-inline.control-group
        %label{:for => "select01"} Kind
        %br/
        .controls.span12
          %select#select01.span12
            %option List Table
            %option 2
            %option 3
            %option 4
            %option 5
        %br/
        %span.help-inline
  =render :partial => 'design/templates/modalfooter', :locals => { :shownote => false, :showcreated => false, :showrevs => false }
