        %a.btn{:href => "#"}
          %i.gcmsicon-arrowright-black
      %nav.fltrt.txtrt.span3
        %a#actionButton.btn.btn-large.btn-success.btn-primary{:href => "#", "data-dismiss" => "modal"} Save
  -else
    .row-fluid
      %nav.fltlft.txtlft.span3
        %a.btn.btn-large.btn-info{"data-dismiss" => "modal", :href => "#"} Cancel
      %nav.fltrt.txtrt.span3
        %a#actionButton.btn.btn-large.btn-success{:href => "#", "data-dismiss" => "modal"} Save